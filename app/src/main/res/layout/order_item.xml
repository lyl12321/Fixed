<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_marginstart"
        android:layout_marginTop="@dimen/layout_margintop"
        android:layout_marginEnd="@dimen/layout_marginend"
        android:layout_marginBottom="@dimen/layout_marginBottom"
        app:cardCornerRadius="@dimen/cardcornerradius"
        app:cardElevation="@dimen/cardelevation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/layout_marginstart"
            android:layout_marginTop="@dimen/layout_margintop"
            android:layout_marginEnd="@dimen/layout_marginend"
            android:layout_marginBottom="@dimen/layout_marginBottom"
            android:orientation="vertical">


            <TextView
                android:id="@+id/list_item_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="订单号:  "
                android:textSize="@dimen/textsize" />

            <TextView
                android:id="@+id/list_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="姓名:  "
                android:textSize="@dimen/textsize" />

            <TextView
                android:id="@+id/list_item_phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="电话:  "
                android:textSize="@dimen/textsize" />

            <TextView
                android:id="@+id/list_item_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="位置:  "
                android:textSize="@dimen/textsize" />

            <TextView
                android:id="@+id/list_item_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="预约时间:  "
                android:textSize="@dimen/textsize" />

            <TextView
                android:id="@+id/list_item_servicePeople"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="服务人员:  "
                android:textSize="@dimen/textsize" />

            <TextView
                android:id="@+id/list_item_issue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="出现问题:  "
                android:textSize="@dimen/textsize" />

            <TextView
                android:id="@+id/list_item_commitTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="下单时间:  "
                android:textSize="@dimen/textsize" />

            <TextView
                android:id="@+id/list_item_solve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="已完成"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal"
                >

                <!--<Button-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="取消订单"-->
                    <!--android:textColor="@color/blue"-->
                    <!--android:layout_marginRight="5dp"-->
                    <!--android:background="@drawable/app_buttonstyle"-->
                    <!--/>-->

                <!--<Button-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--style="@style/TextAppearance.MaterialComponents.Button"-->
                    <!--android:text="完成订单"-->
                    <!--android:backgroundTint="@color/red"-->
                    <!--android:textColor="@color/appBackColor"-->

                    <!--/>-->
                <android.support.design.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消订单"
                    android:textColor="@color/appBackColor"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:backgroundTint="@color/red"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"
                    android:id="@+id/cancel_order"
                    />

                <android.support.design.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="完成订单"
                    android:textColor="@color/appBackColor"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:backgroundTint="@color/red"
                    android:visibility="gone"
                    android:id="@+id/finished_order"
                    />

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>



</LinearLayout>