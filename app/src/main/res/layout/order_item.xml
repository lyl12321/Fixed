<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_marginstart"
        android:layout_marginTop="@dimen/layout_margintop"
        android:layout_marginEnd="@dimen/layout_marginend"
        android:layout_marginBottom="@dimen/layout_marginBottom"
        app:cardCornerRadius="@dimen/cardcornerradius"
        app:cardElevation="@dimen/cardelevation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_marginStart="@dimen/layout_marginstart"
            android:layout_marginTop="@dimen/layout_margintop"
            android:layout_marginEnd="@dimen/layout_marginend"
            android:layout_marginBottom="@dimen/layout_marginBottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="订单号:  "
                android:textSize="@dimen/textsize"
                android:id="@+id/list_item_id"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="姓名:  "
                android:textSize="@dimen/textsize"
                android:id="@+id/list_item_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="电话:  "
                android:textSize="@dimen/textsize"
                android:id="@+id/list_item_phoneNumber"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="位置:  "
                android:textSize="@dimen/textsize"
                android:id="@+id/list_item_address"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="预约时间:  "
                android:textSize="@dimen/textsize"
                android:id="@+id/list_item_time"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="服务人员:  "
                android:textSize="@dimen/textsize"
                android:id="@+id/list_item_servicePeople"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="出现问题:  "
                android:textSize="@dimen/textsize"
                android:id="@+id/list_item_issue"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="下单时间:  "
                android:textSize="@dimen/textsize"
                android:id="@+id/list_item_commitTime"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="24dp"
                android:id="@+id/list_item_solve"
                android:text="已完成"/>



        </LinearLayout>





    </android.support.v7.widget.CardView>



</LinearLayout>